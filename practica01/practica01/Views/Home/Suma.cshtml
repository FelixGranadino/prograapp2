          <input type="number" asp-for="Dato2" placeholder="Coloca tu segundo numero" class="form-control" min="0" max="10"/>  
        }
        else
        {
            <input type="number" asp-for="Dato2" placeholder="Coloca tu segundo numero" value="@ViewBag.DatoN2" class="form-control" min="0" max="10"/>
        }

    
 

    <button class="btn-primary">Sumar datos</button>
